{
  "name": "fasenergo",
  "version": "1.0.0",
  "description": "Fasenergo website",
  "homepage": "https://fasenergo.ru",
  "twitter": "@fasenergo",
  "author": "LotusTM (https://github.com/LotusTM)",
  "contributors": [
    "Mr.Hyde <npm@2bad.me>",
    "Serj Lavrin (https://github.com/ArmorDarks)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FAS/fasenergo.git"
  },
  "bugs": {
    "url": "https://github.com/FAS/fasenergo/issues"
  },
  "dependencies": {
    "autoprefixer": "6.7.5",
    "gmsmith": "1.1.2",
    "grunt": "1.0.1",
    "grunt-browser-sync": "2.2.0",
    "grunt-cache-bust": "1.5.1",
    "grunt-contrib-clean": "1.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-htmlmin": "2.2.0",
    "grunt-contrib-uglify": "2.1.0",
    "grunt-contrib-watch": "1.0.0",
    "grunt-csso": "2.2.0",
    "grunt-gray-matter": "1.2.0",
    "grunt-newer": "1.2.0",
    "grunt-nunjucks-2-html": "2.1.0",
    "grunt-postcss": "0.8.0",
    "grunt-responsive-images": "1.10.1",
    "grunt-sass": "2.0.0",
    "grunt-shell": "2.1.0",
    "grunt-sitemap-xml": "0.2.1",
    "grunt-size-report": "0.1.4",
    "grunt-spritesmith": "6.4.0",
    "grunt-tinypng": "0.6.1",
    "grunt-uncss": "0.6.1",
    "grunt-webfont": "1.6.0",
    "jit-grunt": "0.10.0",
    "jspm": "0.17.0-beta.41",
    "lodash": "4.17.4",
    "markdown-it": "8.3.0",
    "moment": "2.17.1",
    "node-gettext": "1.1.0",
    "node-sass-utils": "1.1.2",
    "numbro": "1.9.3",
    "nunjucks-markdown": "2.0.1",
    "smart-plurals": "1.1.0",
    "sprintf-js": "1.0.3",
    "time-grunt": "1.4.0",
    "url-join": "1.1.0",
    "urlify": "0.3.6"
  },
  "devDependencies": {
    "babel-eslint": "7.1.1",
    "babel-jest": "19.0.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-latest": "6.22.0",
    "chokidar-socket-emitter": "0.6.0",
    "jest": "19.0.2",
    "npm-run-all": "4.0.2",
    "standard": "8.6.0",
    "stylelint": "7.9.0",
    "stylelint-config-standard": "16.0.0",
    "stylelint-scss": "1.4.3",
    "tcomb-validation": "3.3.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jspm": {
    "name": "kotsu",
    "main": "main.js",
    "dependencies": {
      "babel-polyfill": "npm:babel-polyfill@^6.23.0",
      "jquery": "npm:jquery@^3.1.0",
      "jump.js": "npm:jump.js@^1.0.2",
      "lodash": "npm:lodash@^4.17.4"
    },
    "devDependencies": {
      "plugin-babel": "npm:systemjs-plugin-babel@^0.0.21",
      "systemjs-hot-reloader": "npm:systemjs-hot-reloader@^1.1.0"
    },
    "peerDependencies": {
      "fs": "npm:jspm-nodelibs-fs@^0.2.0",
      "path": "npm:jspm-nodelibs-path@^0.2.0",
      "process": "npm:jspm-nodelibs-process@^0.2.0"
    },
    "overrides": {
      "npm:jquery@3.2.1": {
        "format": "amd"
      },
      "npm:lodash@4.17.4": {
        "map": {
          "buffer": "@empty",
          "process": "@empty"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "jspm config registries.github.auth $GITHUB_API_KEY && jspm install",
    "start": "npm-run-all --parallel grunt js:chokidar",
    "serve": "npm-run-all --parallel grunt:serve js:chokidar",
    "grunt": "grunt",
    "grunt:serve": "grunt serve",
    "js:chokidar": "cd ./source/scripts && chokidar-socket-emitter",
    "lint": "standard && stylelint **/*.{css,scss,sass}",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "build": "grunt build && git status | grep -E 'working (tree|directory) clean' >/dev/null || (echo 'Build task should not generate or change files outside build folder'; exit 1)"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "jspm.config.js",
      "jspm_packages/**"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "coffee",
      "js"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.coffee$": "<rootDir>/tests/utils/jest-preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/jspm_packages/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(coffee|js)?$"
  }
}
